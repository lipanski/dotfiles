# i3blocks config file
#
# Please see man i3blocks for a complete reference!
# The man page is also hosted at http://vivien.github.io/i3blocks
#
# List of valid properties:
#
# align
# color
# command
# full_text
# instance
# interval
# label
# min_width
# name
# separator
# separator_block_width
# short_text
# signal
# urgent

# Global properties
#
# The top properties below are applied to every block, but can be overridden.
# Each block command defaults to the script name to avoid boilerplate.
command=/usr/share/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango
interval=5

[volume]
command=/usr/share/i3blocks/volume 0 pulse
label=â™ª
instance=Master
interval=1

[command]
command=watson status -p | sed -e 's/no project started./NO PROJECT/ig' -e t -e 's/.*/PROJECT: \U&/g'
interval=30

[toggle_screen_lock]
command=~/.config/i3blocks/scripts/toggle_screen_lock
interval=120

[toggle_mail_sync]
command=~/.config/i3blocks/scripts/toggle_mail_sync
interval=30

[mail]
command=~/.config/i3blocks/scripts/mail email@example.com

[battery]
command=~/.config/i3blocks/scripts/battery
interval=30

[memory]
label=MEM
separator=false
interval=30

[disk]
label=ROOT
instance=/root
separator=false
interval=30

[disk]
label=HOME
interval=30

# [iface]
# instance=wlp4s0
# color=#00FF00

[key_layout]
command=~/.config/i3blocks/scripts/key_layout

[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=1

